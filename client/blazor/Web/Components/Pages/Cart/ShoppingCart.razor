@page "/cart"
@using Web.Services.Cart.DTOs
@using Web.Services.Cart
@using Microsoft.AspNetCore.Components.Authorization
@inject CartService CartService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer
@attribute [AllowAnonymous]

<style>
    .spinner {
        display: inline-block;
        width: 16px;
        height: 16px;
        border: 2px solid #ffffff;
        border-radius: 50%;
        border-top-color: transparent;
        animation: spin 1s ease-in-out infinite;
        margin-right: 8px;
    }
    
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    .checkout-btn:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }
</style>

<div class="dashboard-container">
    <aside class="sidebar">
        <NavMenu />
    </aside>
    <main class="main-content">
        <header class="topbar">
            <div class="brand">
                <span class="dot"></span>
                <span>Shopping Cart</span>
            </div>
            <div class="topbar-actions">
                <input class="search" placeholder="Searchâ€¦" />
                <div class="avatar" title="Account"></div>
            </div>
        </header>
        <div class="content-wrapper">
            <section class="greeting">
                <h1>Your Shopping Cart</h1>
                <p>Review your items before checkout</p>
            </section>
            
            @if (isLoading)
            {
                <div class="loading">
                    <p>Loading cart...</p>
                </div>
            }
            else if (cart.Items.Count == 0)
            {
                <div class="empty-cart">
                    <h3>Your cart is empty</h3>
                    <p>Start shopping to add items to your cart</p>
                    <button class="btn btn-primary" @onclick="GoToProducts">
                        Browse Products
                    </button>
                </div>
            }
            else
            {
                <div class="cart-container">
                    <div class="cart-items">
                        @foreach (var item in cart.Items)
                        {
                            <div class="cart-item">
                                <div class="item-info">
                                    <h4 class="item-name">@item.ProductName</h4>
                                    <div class="item-price">@item.Price.ToString("C") @item.Currency</div>
                                </div>
                                <div class="item-quantity">
                                    <button class="quantity-btn" @onclick="() => UpdateQuantity(item.ProductId, item.Quantity - 1)" disabled="@(item.Quantity <= 1 || isUpdating)">-</button>
                                    <span class="quantity">@item.Quantity</span>
                                    <button class="quantity-btn" @onclick="() => UpdateQuantity(item.ProductId, item.Quantity + 1)" disabled="@isUpdating">+</button>
                                </div>
                                <div class="item-total">
                                    @((item.Price * item.Quantity).ToString("C"))
                                </div>
                                <button class="btn btn-danger remove-btn" 
                                        @onclick="() => RemoveItem(item.ProductId)"
                                        disabled="@isRemoving">
                                    Remove
                                </button>
                            </div>
                        }
                    </div>
                    
                    <div class="cart-summary">
                        <div class="summary-card">
                            <h3>Order Summary</h3>
                            <div class="summary-row">
                                <span>Items (@cart.Items.Count)</span>
                                <span>@cart.TotalPrice.ToString("C") @cart.Currency</span>
                            </div>
                            <div class="summary-row total">
                                <span>Total</span>
                                <span>@cart.TotalPrice.ToString("C") @cart.Currency</span>
                            </div>
                            <button class="btn btn-success checkout-btn" 
                                    @onclick="ProceedToCheckout"
                                    disabled="@isProcessing">
                                @if (isProcessing)
                                {
                                    <span><span class="spinner"></span>Creating Order...</span>
                                }
                                else
                                {
                                    <span>Proceed to Checkout</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</div>

@code {
    private CartDto cart = new();
    private bool isLoading = true;
    private bool isRemoving = false;
    private bool isUpdating = false;
    private bool isProcessing = false;
    private string userId = string.Empty;
    private string sessionId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        // Get user info from authentication state
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            userId = authState.User.FindFirst("sub")?.Value ?? string.Empty;
        }
        else
        {
            userId = "00000000-0000-0000-0000-000000000001"; // Placeholder for anonymous user
        }
        
        // Generate or get session ID
        sessionId = "00000000-0000-0000-0000-000000000002"; // Placeholder for session ID logic
        
        await LoadCart();
    }

    private async Task LoadCart()
    {
        isLoading = true;
        try
        {
            cart = await CartService.GetCartAsync(userId, sessionId) ?? new CartDto();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading cart: {ex.Message}");
            cart = new CartDto();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateQuantity(string productId, int newQuantity)
    {
        if (newQuantity < 1) return;
        
        isUpdating = true;
        try
        {
            var input = new UpdateItemQuantityInput
            {
                UserId = userId,
                SessionId = sessionId,
                ItemId = productId,
                Quantity = newQuantity
            };
            
            var updatedCart = await CartService.UpdateItemQuantityAsync(input);
            if (updatedCart != null)
            {
                cart = updatedCart;
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating quantity: {ex.Message}");
        }
        finally
        {
            isUpdating = false;
        }
    }

    private async Task RemoveItem(string productId)
    {
        isRemoving = true;
        try
        {
            var input = new RemoveFromCartInput
            {
                UserId = userId,
                SessionId = sessionId,
                ItemId = productId
            };
            
            var updatedCart = await CartService.RemoveFromCartAsync(input);
            if (updatedCart != null)
            {
                cart = updatedCart;
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error removing item: {ex.Message}");
        }
        finally
        {
            isRemoving = false;
        }
    }

    private void GoToProducts()
    {
        Navigation.NavigateTo("/products");
    }

    private async Task ProceedToCheckout()
    {
        isProcessing = true;
        try
        {
            var input = new CheckoutInput
            {
                UserId = userId,
                SessionId = sessionId
            };
            
            var result = await CartService.CheckoutAsync(input);
            if (result?.Success == true && !string.IsNullOrEmpty(result.OrderId))
            {
                Navigation.NavigateTo($"/payment/{result.OrderId}");
                return;
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", result?.Message ?? "Checkout failed");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error during checkout: {ex.Message}");
        }
        
        // Only reset processing state if checkout failed
        isProcessing = false;
    }
}
