    "typescript": ">=4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DHS-Soft-Hub/base-web-app-template.git",
    "directory": "frontend/core"
  },
  "publishConfig": {
    "access": "public"
  }
