{
  "name": "@dhs-hub/core",
  "version": "1.0.0",
  "description": "Core domain abstractions and interfaces for DDD/Clean Architecture applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
